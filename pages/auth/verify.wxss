.house-photos {
  position: relative;
  height: 470rpx;
}
.house-photos swiper {
  height: 100%;
}
.house-photos image {
  width: 100%;
  height: 100%;
}
.house-photos .desc {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  width: 260rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
}

.opt {
  margin: 42rpx 30rpx 0 30rpx;
  text-align: center;
}
.opt navigator {
  display: block;
  margin-top: 44rpx;
  font-size: 36rpx;
  color: #999899;
}

.tips {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 100rpx;
  color: #999899;
  text-align: center;
}