/* pages/auth/mobile-verify.wxss */
.house-photos {
  position: relative;
  height: 470rpx;
}
.house-photos swiper {
  height: 100%;
}
.house-photos image {
  width: 100%;
  height: 100%;
}
.house-photos .desc {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  width: 260rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
}

.form {
  background-color: #fff;
}
.form-item {
  display: flex;
  align-items: center;
}
.form-item + .form-item {
  border-top: 1px solid #e8e8e8;
}
.form-title,
.form-control,
.form-opt {
  height: 100%;
  padding: 20rpx 0;
  font-size: 30rpx;
  line-height: 2;
}
.form-title {
  width: 200rpx;
  padding-left: 30rpx;
}
.form-control {
  flex: 1;
}
.form-opt {
  border-left: 1px solid #e8e8e8;
  text-align: center;
  color: #999;
  background-color: transparent;
  border-radius: 0;
}
.form-opt.button-hover {
  background-color: #eee;
}
.form-opt::after {
  display: none;
}
.get-code {
  width: 240rpx;
}

.opt {
  margin: 80rpx 40rpx 0;
}

.tips {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 100rpx;
  color: #999899;
  text-align: center;
}