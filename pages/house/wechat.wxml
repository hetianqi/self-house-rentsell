    </view>
    <view class="message-item send">
      <text>Yes, that's good.See you tonight.</text>
    </view>
  </view>
  <view class="message-form">
    <view class="message-input">
      <textarea bindinput="message" placeholder="写下想说的话..." auto-focus></textarea>
    </view>
    <view class="message-opt">
      <button class="btn btn-block">发送</button>
    </view>
  </view>
</view>