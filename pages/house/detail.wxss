/* pages/house/detail.wxss */
.house-photos {
  position: relative;
  height: 470rpx;
}
.house-photos swiper {
  height: 100%;
}
.house-photos image {
  width: 100%;
  height: 100%;
}
.house-photos .desc {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  width: 260rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
}

.house-brief-item {
  display: flex;
  height: 112rpx;
  border: 1px solid #D9D9D9;
  border-right-width: 0;
  align-items: center;
}
.house-brief-item:first-child {
  border-left-width: 0;
}
.house-brief-item .icon {
  margin: 0 20rpx;
  font-size: 40rpx;
  color: #3191f1;
}
.house-brief-item .text {
  display: inline-block;
  font-size: 24rpx;
  color: #5a5a5a;
}