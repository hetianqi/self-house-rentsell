/* pages/house/replyMsg.wxss */

.message-list {
  background-color: #fff;
}
.message-item {
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}
.message-item .left {
  margin-right: 30rpx;
}
.message-item .left .iconfont {
  font-size: 50rpx;
  color: #3191f1;
}
.message-item .right {
  flex: 1;
}
.message-item .user {
  color: #3191f1;
  margin-bottom: 10rpx;
}
.message-item .date {
  color: #666666;
  margin-top: 10rpx;
}

.opt {
  margin: 56rpx 40rpx 100rpx;
}
