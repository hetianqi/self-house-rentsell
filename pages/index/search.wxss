/* pages/index/search.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}
.search {
  flex: 1;
  display: flex;
  align-items: center;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #fff;
}
.search-input {
  flex: 1;
}
.search .iconfont {
  width: 60rpx;
  font-size: 30rpx;
  text-align: center;
}
.cancel {
  margin-left: 20rpx;
  color: #1AAD16;
}

.result-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling:touch;
}
.result-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}
.result-item:last-child {
  margin-bottom: 100rpx;
}
.premises-name {
  flex: 1;
}
.house-count {
  width: 60rpx;
  text-align: right;
}