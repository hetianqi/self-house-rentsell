/**index.wxss**/
.container {
  position: relative;
}

cover-image {
  line-height: 1;
}

.map {
  width: 100%;
  height: 100%;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #e8e8e8;
}

.search {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  top: 20rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  background-color: #fff;
}
.search-icon {
  display: flex;
  width: 60rpx;
  align-items: center;
  justify-content: center;
}
.search-icon .ic_search {
  width: 30rpx;
  height: 30rpx;
}
.search-icon .ic_mic {
  width: 22.5rpx;
  height: 30rpx;
}
.search-tips {
  flex: 1;
  padding: 35rpx 20rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #999;
}

.zoom-in,
.zoom-out,
.locate {
  position: absolute;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.zoom-in {
  top: 290rpx;
}
.zoom-out {
  top: 362rpx;
}
.locate {
  top: 472rpx;
}
.zoom-in cover-image,
.zoom-out cover-image,
.locate cover-image {
  width: 100%;
  height: 100%;
}

.bottom-btn-group {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 80rpx;
  display: flex;
  justify-content: space-around;
}
.my-apply,
.scan-code  {
  width: 260rpx;
  padding: 20rpx 0;
}
.my-apply .btn-icon,
.scan-code .btn-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0;
}
.scan-code .btn-icon {
  margin-top: -2rpx;
}

.marker-detail {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background-color: #fff; 
  transform: translate(0, 100%);  
  /* transition: transform .2s;   */
}
.marker-detail.show {
  transform: translate(0, 0);
}
.marker-header {
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
}
.marker-maintitle {
  margin-right: 30rpx;
  padding-top: 4rpx;
  font-size: 34rpx;
  color: #212121;
}
.marker-subtitle {
  flex: 1;
  display: flex;
  align-items: center;
  padding-top: 4rpx;
  font-size: 30rpx;
  color: #5f5f5f;
}
.house-num {
  color: #3191f1;
  margin-right: 5rpx;
}
.marker-close {  
  font-size: 50rpx;
  color: #666;
  font-weight: 100;
}
.marker-close cover-image {
  width: 30rpx;
  height: 30rpx;
}
.marker-body {
  max-height: 780rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.house-list {
  border-bottom: 0;
}
.house-item::after {
  display: none;
}
.marker-opt {
  margin: 30rpx;
}