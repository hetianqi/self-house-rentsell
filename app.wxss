/**app.wxss**/
@import './fonts/iconfont.wxss';

/* 统一重置样式 */

view, 
scroll-view, 
swiper, 
moveable-view, 
cover-view, 
icon, 
text, 
rich-text, 
progress, 
button, 
checkbox,
form,
input,
label,
picker,
picker-view,
radio,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
camera,
live-player,
live-pusher,
map,
canvas,
open-data,
web-view {
  box-sizing: border-box;
}

page {
  height: 100%;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-size: 26rpx;
  line-height: 1.5;
}

navigator {
  display: inline;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.iconfont {
  font-size: inherit;
  display: inline-block;
  vertical-align: middle;
}

.block {
  display: block;
}

.btn {
  display: inline-block;
  width: 260rpx;
  padding: 22rpx 0;
  line-height: 1;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  background-color: #3191f1;
  font-size: 36rpx;
}
/* 去掉button的border */
.btn::after {
  display: none;
}
.btn-gray {
  background-color: #e9eaeb;
  color: #999;
}
.btn-success {
  background-color: #82c97e;
}
.btn-icon {
  display: inline-block;
  margin-right: 14rpx;
  vertical-align: middle;
  line-height: inherit;
}
.btn-text {
  display: inline;
  vertical-align: middle;
  line-height: inherit;
}
.btn[loading] {  
  color:rgba(255, 255, 255, 0.6);
  background-color: #2183E8;
}
.btn[loading]::before {
  position: relative;
  top: -4rpx;
}
.btn-block {
  display: block;
  width: 100%;
}
.btn.button-hover,
.btn[disabled] {
  color: #fff !important;
  background-color: #3191f1 !important;
  opacity: 0.7 !important;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-item {
  flex: 1;
}

.p {
  display: block;
  margin-bottom: 10rpx;
}