/**app.wxss**/
@import './fonts/iconfont.wxss';

/* 统一重置样式 */

view, 
scroll-view, 
swiper, 
moveable-view, 
cover-view, 
icon, 
text, 
rich-text, 
progress, 
button, 
checkbox,
form,
input,
label,
picker,
picker-view,
radio,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
camera,
live-player,
live-pusher,
map,
canvas,
open-data,
web-view {
  box-sizing: border-box;
}

page {
  height: 100%;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  overflow: auto;
}

.iconfont {
  font-size: inherit;
  display: inline-block;
}

.btn {
  display: inline-block;
  width: 258rpx;
  padding: 20rpx 0;
  line-height: 1.2em;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  background-color: #3191f1;
  font-size: 32rpx;
}
.btn-lg {
  font-size: 38rpx;
}
.btn-block {
  display: block;
  width: 100%;
}
.btn-icon {
  display: inline-block;
  margin-right: 14rpx;
  vertical-align: top;
}
.btn-text {
  display: inline;
  vertical-align: top;
}
.btn[loading] {  
  color:rgba(255, 255, 255, 0.6);
  background-color: #2183E8;
}