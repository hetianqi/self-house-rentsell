/**app.wxss**/
@import './fonts/iconfont.wxss';

/* 统一重置样式 */

view, 
scroll-view, 
swiper, 
moveable-view, 
cover-view, 
icon, 
text, 
rich-text, 
progress, 
button, 
checkbox,
form,
input,
label,
picker,
picker-view,
radio,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
camera,
live-player,
live-pusher,
map,
canvas,
open-data,
web-view {
  box-sizing: border-box;
}

page {
  height: 100%;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

navigator {
  display: inline;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.iconfont {
  font-size: inherit;
  display: inline-block;
  vertical-align: middle;
}

.block {
  display: block;
}

.btn {
  display: inline-block;
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 36rpx;
}
/* 去掉button的border */
.btn::after {
  display: none;
}
.btn-icon {
  display: inline;
  margin-right: 14rpx;
  vertical-align: middle;
  line-height: inherit;
}
.btn-text {
  display: inline;
  vertical-align: middle;
  line-height: inherit;
}
.btn[loading]::before {
  position: relative;
  top: -4rpx;
}
.btn-block {
  display: block;
  width: 100%;
}
.button-hover,
button[disabled],
.btn[loading] {
  opacity: 0.7 !important;
}
.btn,
.btn.button-hover
.btn[disabled] {
  background-color: #3191f1 !important;
  color: #fff !important;
}
.btn-gray,
.btn-gray.button-hover,
.btn-gray[disabled]  {
  background-color: #BFBFBF !important;
  color: #fff !important;
}
.btn-success,
.btn-success.button-hover,
.btn-success[disabled] {
  background-color: #3CB035 !important;
  color: #fff !important;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-item {
  flex: 1;
}

.p {
  display: block;
  margin-bottom: 10rpx;
}

.house-list {
  border-bottom: 1px solid #e8e8e8;
}
.house-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}
.house-item::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  border-top: 1px solid #e8e8e8;
}
.house-item:first-child::after {
  display: none;
}
.house-image {
  width: 200rpx;
  height: 150rpx;
  margin-right: 28rpx;
}
.house-image cover-image,
.house-image image {
  width: 100%;
  height: 100%;
}
.house-detail {
  flex: 1;
}
.house-type {
  font-size: 30rpx;
  color: #3191f1;
}
.house-desc {
  font-size: 30rpx;
  color: #212121;
  margin-top: 20rpx;  
}
.house-tags {
  display: flex;
  margin-top: 20rpx;  
}
.house-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  padding: 10rpx 20rpx;
  border-radius: 80rpx;
  font-size: 24rpx;
  color: #999899;
  background-color: #dedede;
}
.house-tag cover-view {  
  padding-bottom: 4rpx;
}
.house-price {
  margin-top: 20rpx;
  font-size: 34rpx;
  color: #f55931;
}

.house-photos {
  position: relative;
  height: 470rpx;
}
.house-photos swiper {
  height: 100%;
}
.house-photos image {
  width: 100%;
  height: 100%;
}
.house-photos .desc {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  width: 260rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
}

.message-form {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: none;
  background-color: rgba(0,0,0,.5);
}
.message-form.show {
  display: block;
}
.message-box {
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.message-input {
  flex: 1;
}
.message-input textarea {
  height: 146rpx; 
  padding: 10rpx;  
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: transparent; 
}
.message-form.show textarea {
  color: #000; 
}
.message-opt {  
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 110rpx;
}
.message-opt button {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  line-height: 1;
  font-size: 30rpx;
  color: #666666;
  background-color: transparent;
  white-space: nowrap;
}
.message-opt button::after {
  display: none;
}
.message-opt button.button-hover {
  color: #000000;
}