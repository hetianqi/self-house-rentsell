/**app.wxss**/
@import './fonts/iconfont.wxss';

/* 统一重置样式 */

view, 
scroll-view, 
swiper, 
moveable-view, 
cover-view, 
icon, 
text, 
rich-text, 
progress, 
button, 
checkbox,
form,
input,
label,
picker,
picker-view,
radio,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
camera,
live-player,
live-pusher,
map,
canvas,
open-data,
web-view {
  box-sizing: border-box;
}

page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.iconfont {
  font-size: inherit;
  display: inline-block;
}

.button {
  display: inline-block;
  padding: 20rpx 0;
  line-height: 1;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  background-color: #3191f1;
  font-size: 32rpx;
}
.button-icon {
  display: inline-block;
  line-height: 1;
  margin-right: 14rpx;
  vertical-align: top;
}
.button-text {
  display: inline;
  line-height: 1;
  vertical-align: top;
}