/* components/cell/cell.wxss */
cell {
  display: block;
}
.cell {
  display: flex;
  padding: 30rpx;
  position: relative;
}
.cell::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  border-top: 1px solid #d9d9d9;
}
cell:first-child .cell::after {
  display: none;
}
.cell-left {
  flex: 1;
}
.cell-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}