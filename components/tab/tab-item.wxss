/* components/tab/tab-item.wxss */
tab-item {
  flex: auto;
  text-align: center;
}
.tab-item {
  position: relative;
  display: inline-block;
  height: 100%;
  font-size: 34rpx;
  color: #999899;
  line-height: 84rpx;
}
.active {
  color: #3893ee;
}
.tab-item-text {
  line-height: 1;
}
.active .tab-item-text::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  background-color: #3893ee;
}