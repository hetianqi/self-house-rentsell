/* components/media/media-item.wxss */

media-item {
  display: block;
  background-color: #fff;
}
.media-item {
  display: flex;
  padding: 30rpx;
  position: relative;
}
.media-item::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  border-top: 1px solid #cad4d8;
}
.media-item:first-child::after {
  display: none;
}
.media-left {
  width: 180rpx;
  height: 150rpx;
}
.media-left image {
  width: 100%;
  height: 100%;
}
.media-center {
  flex: 1;
  padding: 0 30rpx;
}
.media-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}